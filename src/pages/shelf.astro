<style>
  :root {
    --shelf-scale: 1;
  }

  @media (max-width: 1024px) { :root { --shelf-scale: 0.85; } }
  @media (max-width: 768px)  { :root { --shelf-scale: 0.7; } }
  @media (max-width: 640px)  { :root { --shelf-scale: 0.6; } }


  .shelf-scroll {
    padding-left: max(1rem, calc((100vw - 1280px) / 2 + 1rem + 1rem + 11rem)); /* Align with max-w-4xl + its px-4 */
  }

  .shelf-scroll::-webkit-scrollbar {
    height: 8px;
  }

  .shelf-scroll::-webkit-scrollbar-thumb {
    border-radius: 4px;
  }

  :global(.light) .shelf-scroll::-webkit-scrollbar-thumb {
    background: rgb(156 163 175);
  }

  :global(.dark) .shelf-scroll::-webkit-scrollbar-thumb {
    background: rgb(75 85 99);
  }
</style>

<script>
  const groupedView = document.getElementById('grouped-view');
  const mixedView = document.getElementById('mixed-view');
  const groupedBtn = document.getElementById('view-grouped');
  const mixedBtn = document.getElementById('view-mixed');

  function showGrouped() {
    groupedView?.classList.remove('hidden');
    mixedView?.classList.add('hidden');
    groupedBtn?.classList.add('bg-gray-900', 'dark:bg-gray-100', 'text-white', 'dark:text-gray-900');
    groupedBtn?.classList.remove('border', 'border-gray-300', 'dark:border-gray-700', 'hover:bg-gray-100', 'dark:hover:bg-gray-800');
    mixedBtn?.classList.remove('bg-gray-900', 'dark:bg-gray-100', 'text-white', 'dark:text-gray-900');
    mixedBtn?.classList.add('border', 'border-gray-300', 'dark:border-gray-700', 'hover:bg-gray-100', 'dark:hover:bg-gray-800');
  }

  function showMixed() {
    groupedView?.classList.add('hidden');
    mixedView?.classList.remove('hidden');
    mixedBtn?.classList.add('bg-gray-900', 'dark:bg-gray-100', 'text-white', 'dark:text-gray-900');
    mixedBtn?.classList.remove('border', 'border-gray-300', 'dark:border-gray-700', 'hover:bg-gray-100', 'dark:hover:bg-gray-800');
    groupedBtn?.classList.remove('bg-gray-900', 'dark:bg-gray-100', 'text-white', 'dark:text-gray-900');
    groupedBtn?.classList.add('border', 'border-gray-300', 'dark:border-gray-700', 'hover:bg-gray-100', 'dark:hover:bg-gray-800');
  }

  groupedBtn?.addEventListener('click', showGrouped);
  mixedBtn?.addEventListener('click', showMixed);
</script>