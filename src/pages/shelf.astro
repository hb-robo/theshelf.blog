// src/pages/shelf.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import SpineDisplay from '../components/SpineDisplay.astro';
import { getCollection } from 'astro:content';

// Get all items on the shelf
const allReviews = await getCollection('reviews');
const allMedia = allReviews.flatMap(review =>
  (review.data.media || []).map(m => ({
    ...m,
    articleSlug: review.slug,
  }))
)


const shelfItems = allMedia.filter(m => m.madeTheShelf && m.shelfStatus === 'owned');
const wishlistItems = allMedia.filter(m => m.madeTheShelf && m.shelfStatus === 'not-owned');


function groupByMediaType(mediaList){
  return {
    music: mediaList.filter(m => m.mediaType === 'music'),
    game: mediaList.filter(m => m.mediaType === 'game'),
    film: mediaList.filter(m => m.mediaType === 'film'),
    book: mediaList.filter(m => m.mediaType === 'book')
  }
};

const shelfByMedia = groupByMediaType(shelfItems);
const wishListByMedia = groupByMediaType(wishlistItems);

// Calculate stats
const totalOnShelf = shelfItems.length;
const totalReviews = allReviews.length;
const approvalRate = totalReviews > 0 
  ? Math.round((totalOnShelf / allMedia.length) * 100) 
  : 0;
