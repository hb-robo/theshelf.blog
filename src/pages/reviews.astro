---
// src/pages/reviews/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import ReviewCard from '../components/ReviewCard.astro';
import { getCollection } from 'astro:content';

const allReviews = await getCollection('reviews');
const publishedReviews = allReviews.filter(r => r.data.published);

const reviews = publishedReviews.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<BaseLayout title="writing collection">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <header class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 tracking-tight">
        writing collection
      </h1>
      <p>All of my public media criticism.</p>
    </header>
    <div id="reviews-container" class="space-y-6">
      {reviews.map((review) => (
        <div class="review-item">
          <ReviewCard itemData={review}/>
        </div>
      ))}
    </div>

  </div>
</BaseLayout>
