---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { getScoreColor, getPriorityCreatives, formatCreativeLine, getMediaTypeBorder } from '../lib/cardElements';
import type { ExpandedMediaItem } from '../lib/types';
import { getExpandedMediaList } from '../lib/expandMediaItems';

const reviews = await getCollection('reviews');
const allMedia: ExpandedMediaItem[] = await getExpandedMediaList(); 

// Calculate comprehensive stats
const totalReviews = reviews.filter(r => r.data.published).length;
const totalMedia = allMedia.length;
const onShelf = allMedia.filter(m => m.result === 'made-the-shelf' && m.published).length;
const reviewed = allMedia.filter(m => m.published).length;
const unreviewed = totalMedia - reviewed;

// Score distribution (including half-steps)
const scoreCounts: Record<string, number> = {};
const allScores = [10, 9.5, 9, 8.5, 8, 7.5, 7, 6.5, 6, 5.5, 5, 4.5, 4, 3.5, 3, 2.5, 2, 1.5, 1];
allScores.forEach(s => scoreCounts[s.toString()] = 0);

allMedia.forEach(m => {
  if (m.published && m.score) {
    const scoreStr = m.score.toString();
    if (scoreCounts.hasOwnProperty(scoreStr)) {
      scoreCounts[scoreStr]++;
    }
  }
});

// Calculate max based on COMBINED whole + half counts
let maxCombinedCount = 0;
for (let i = 1; i <= 10; i++) {
  const wholeCount = scoreCounts[i.toString()] || 0;
  // Only check for half-step if it's valid (no 10.5)
  const halfCount = i < 10 ? (scoreCounts[(i + 0.5).toString()] || 0) : 0;
  const combined = wholeCount + halfCount;
  if (combined > maxCombinedCount) {
    maxCombinedCount = combined;
  }
}

// Average score
const scoredMedia = allMedia.filter(m => m.published && m.score && typeof m.score === 'number');
const avgScore = scoredMedia.length > 0 
  ? (scoredMedia.reduce((sum, m) => sum + Number(m.score), 0) / scoredMedia.length).toFixed(1)
  : '0';

// Approval rate
const approvalRate = reviewed > 0 ? Math.round((onShelf / reviewed) * 100) : 0;

// Media type breakdown
const byType = {
  film: allMedia.filter(m => m.mediaType === 'film'),
  music: allMedia.filter(m => m.mediaType === 'music'),
  book: allMedia.filter(m => m.mediaType === 'book'),
  game: allMedia.filter(m => m.mediaType === 'game'),
 };

const typeStats = Object.entries(byType).map(([type, items]) => {
  const reviewedItems = items.filter(m => m.published);
  const onShelfItems = items.filter(m => m.result === 'made-the-shelf' && m.published);
  return {
    type,
    total: items.length,
    reviewed: reviewedItems.length,
    onShelf: onShelfItems.length,
    approvalRate: reviewedItems.length > 0 ? Math.round((onShelfItems.length / reviewedItems.length) * 100) : 0,
    avgScore: reviewedItems.length > 0
      ? (reviewedItems.filter(m => m.score).reduce((sum, m) => sum + Number(m.score), 0) / reviewedItems.filter(m => m.score).length).toFixed(1)
      : '0',
  };
});

// Recent activity (last 6 months)
const sixMonthsAgo = new Date();
sixMonthsAgo.setMonth(sixMonthsAgo.getMonth() - 6);

